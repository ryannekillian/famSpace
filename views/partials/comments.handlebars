<section class="col-sm-6 b-2">
  <div class="comments card bg-light mb-4" style="border-radius:0%">
    {{#each this}}
    <section class="comment">
      <div class="meta card-header" style="padding:.25em">
        {{user.username}} on {{format_date created_at}}
      </div>
      <div class="text">
        {{comment_text}}
      </div>
    </section>
    {{/each}}
  </div>
</section>